    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@wagmi/connectors": "^5.7.6",
    "@wagmi/core": "^2.16.3",
    "autoprefixer": "^10.4.16",
    "dotenv": "^16.4.5",
